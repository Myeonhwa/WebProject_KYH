<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd" id="WebApp_ID" version="5.0">
  <display-name>WebProject_KYH</display-name>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  <context-param>
		<param-name>INIT_PARAM</param-name>
		<param-value>web.xml에 저장한 초기화 매개변수</param-value>
	</context-param>
  <!-- JDBC 정보 -->
  <context-param>
  	<param-name>OracleDriver</param-name>
  	<param-value>oracle.jdbc.OracleDriver</param-value>
  </context-param>
  <context-param>
  	<param-name>OracleURL</param-name>
  	<param-value>jdbc:oracle:thin:@localhost:1521:xe</param-value>
  </context-param>
  <context-param>
  	<param-name>OracleId</param-name>
  	<param-value>education</param-value>
  </context-param>
  <context-param>
  	<param-name>OraclePwd</param-name>
  	<param-value>1234</param-value>
  </context-param>
  <!-- 세션 유지시간 설정 : 분 단위 -->
  <session-config>
  	<session-timeout>60</session-timeout>
  </session-config>
  
  <!-- 글 리스트 매핑 -->
  <servlet>
  	<servlet-name>KYHBoardList</servlet-name>
  	<servlet-class>model2.kyh.ListController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>KYHBoardList</servlet-name>
  	<url-pattern>/kyh/list.do</url-pattern>
  </servlet-mapping>
  <!-- 글작성 매핑 -->
  <servlet>
  	<servlet-name>KYHBoardWrite</servlet-name>
  	<servlet-class>model2.kyh.WriteController</servlet-class>
  	<multipart-config>
  		<max-file-size>10485760</max-file-size>
  		<max-request-size>104857600</max-request-size>
  	</multipart-config>
  </servlet>
  <servlet-mapping>
  	<servlet-name>KYHBoardWrite</servlet-name>
  	<url-pattern>/kyh/write.do</url-pattern>
  </servlet-mapping>
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
</web-app>